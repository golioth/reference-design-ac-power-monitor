&i2c2 {
	/* Needed for I2C writes used by libostentus */
	zephyr,concat-buf-size = <48>;

	ostentus@12 {
		status = "okay";
		compatible = "golioth,ostentus";
		reg = <0x12>;
	};

	mcp3201_ch0: mcp3201@0 {
		compatible = "microchip,mcp3201";
		reg = <0>;
		spi-max-frequency = <1600000>;
	};

	mcp3201_ch1: mcp3201@1 {
		compatible = "microchip,mcp3201";
		reg = <1>;
		spi-max-frequency = <1600000>;
	};
};
